{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ],
    "outDir": "dist",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/**/__mocks__/**/**"
  ]
}